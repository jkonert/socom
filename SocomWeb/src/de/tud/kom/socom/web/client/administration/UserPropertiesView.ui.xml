<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Grid width="100%" height="100%" styleName="{style.important}">
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.important}" text="Name" width="100%" height="100%"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox styleName="{style.important}" ui:field="nameBox" width="100%" height="100%" readOnly="true"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.important}" text="UID" width="100%" height="100%"/>
				</g:customCell>
				<g:customCell>
					<g:LongBox styleName="{style.important}" ui:field="uidBox" width="100%" height="100%" readOnly="true"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.important}" text="Status" width="100%" height="100%"/>
				</g:customCell>
				<g:customCell>
					<g:ListBox styleName="{style.important}" ui:field="deletedStates" visibleItemCount="1" width="100%" height="100%"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label />
				</g:customCell>
				<g:customCell>
					<g:Label styleName="{style.important}" ui:field="statusText" width="100%" height="100%"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Button  addStyleNames="button" ui:field="saveButton" width="100%" height="100%" text="Speichern"/>
				</g:customCell>
				<g:customCell>
					<g:Button  addStyleNames="button" ui:field="closeButton" text="SchlieÃŸen" width="100%" height="100%"/>
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder> 