<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	
	 	<servlet>
		<servlet-name>socomWebTemplate</servlet-name>
		<servlet-class>de.tud.kom.socom.web.server.SoComWebTemplateServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>socomWebTemplate</servlet-name>
		<url-pattern>
            socomWeb.html
        </url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>socomCore</servlet-name>
		<servlet-class>de.tud.kom.socom.web.server.SoComWebCoreImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>socomCore</servlet-name>
		<url-pattern>
            /socomweb/core
        </url-pattern>
	</servlet-mapping>

	<servlet>
