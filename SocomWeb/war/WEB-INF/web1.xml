	</servlet>

	<servlet-mapping>
		<servlet-name>InfluenceService</servlet-name>
		<url-pattern>
            /socomweb/influence
        </url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ContentService</servlet-name>
		<servlet-class>de.tud.kom.socom.web.server.SoComContentServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
