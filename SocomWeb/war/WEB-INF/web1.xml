		<servlet-class>de.tud.kom.socom.web.server.SoComStatisticServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>StatisticService</servlet-name>
		<url-pattern>
            /socomweb/stats
        </url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>ReportService</servlet-name>
