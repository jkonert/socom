		<servlet-name>SocialNetworkService</servlet-name>
		<servlet-class>de.tud.kom.socom.web.server.SocialNetworkServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SocialNetworkService</servlet-name>
		<url-pattern>
            /socomweb/fb
        </url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AdminService</servlet-name>
		<servlet-class>de.tud.kom.socom.web.server.SoComAdministrationServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AdminService</servlet-name>
		<url-pattern>
            /socomweb/admin
        </url-pattern>
	</servlet-mapping>
	
