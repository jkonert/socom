	</servlet>

	<servlet-mapping>
		<servlet-name>ReportService</servlet-name>
		<url-pattern>
            /socomweb/report
        </url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->

 	<welcome-file-list>
		<welcome-file>SoComWeb.html</welcome-file>
	</welcome-file-list>

</web-app>