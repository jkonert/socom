		<servlet-class>de.tud.kom.socom.web.server.SoComLoginServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginService</servlet-name>
		<url-pattern>
            /socomweb/login
        </url-pattern>
	</servlet-mapping>

